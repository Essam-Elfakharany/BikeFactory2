@using BikeFactory2.WebUI.WebApiClients;
@model Bikes;

@if (Model == null)
{
    <h1>Add</h1>
}
else
{
    <h1>Update</h1>
}

<h4>Bikes</h4>
<hr />

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddOrUpdate">

                <label asp-for="Name" class="control-label"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />


                <label asp-for="SuspensionType" class="control-label"></label>
                <span asp-validation-for="SuspensionType" class="text-danger"></span>
                <select asp-for="SuspensionType" class="form-control">
                    @foreach (ESuspensionType item in Enum.GetValues(typeof(ESuspensionType)))
                    {
                        <option value="@Convert.ToInt32(item)">@item</option>
                    }
                </select>

                <label asp-for="TireType" class="control-label"></label>
                <span asp-validation-for="TireType" class="text-danger"></span>
                <select asp-for="TireType" class="form-control">
                    @foreach (ETireType item in Enum.GetValues(typeof(ETireType)))
                    {
                        <option value="@Convert.ToInt32(item)">@item</option>
                    }
                </select>


                @if (Model == null)
                {
                    <input type="submit" value="Add" class="btn btn-primary vspace" />
                }
                else
                {
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="submit" value="Update" class="btn btn-primary vspace" />
                }

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
