@using BikeFactory2.WebUI.WebApiClients;
@model IEnumerable<Bikes>


<h1>Manage Bikes</h1>

<a asp-action="AddOrUpdate" class="btn btn-outline-primary">Click here to Add</a>

  <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspensionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TireType)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody class="hoverable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(x => item.SuspensionType)
                </td>
                <td>
                    @Html.DisplayFor(x => item.TireType)
                </td>
                <td>
                    <a href="/ManageBikes/AddOrUpdate?Id=@item.Id" class="btn btn-outline-primary">Update</a>
                    <form asp-action="Remove">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="submit" value="Remove" class="btn btn-danger" onclick="return removeConfirmation();" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
